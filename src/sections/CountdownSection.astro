---
import Countdown from "../components/Countdown";
import { Image } from "astro:assets";
import countdownImage from "../assets/countdown-image.jpg";
---

<section
  id="countdown"
  class="min-h-[calc(100vh-56px)] px-[30px] md:px-0 flex flex-col justify-center relative"
>
  <!-- Background image -->
  <Image
    src={countdownImage}
    alt="Countdown Background"
    class="absolute inset-0 w-full h-full object-cover opacity-80 z-[1]"
  />
  <!-- Gradient overlay -->
  <div
    class="absolute inset-0 bg-gradient-to-b from-transparent to-[rgba(191,2,201,0.5)]"
  >
  </div>

  <div class="max-w-screen-lg w-full mx-auto flex flex-col gap-y-[30px] z-10">
    <h1
      class="text-white font-semibold text-[38px] md:text-[48px] lg:text-[56px] leading-[1.2]"
    >
      Veliki Timski Izazov
    </h1>
    <Countdown client:only="react" targetDate="2025-02-28T23:59:59" />
    <button
      class="bg-white hover:bg-gray-100 transition-all duration-300 hover:-translate-y-1 hover:shadow-lg rounded-[20px] w-full md:max-w-[200px] md:w-full py-5"
    >
      <span class="text-[#2B2B2B] font-semibold">Prijavi ekipu</span>
    </button>
  </div>
</section>
