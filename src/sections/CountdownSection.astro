---
import Countdown from "../components/Countdown";
import { Image } from "astro:assets";
import backgroundImage from "../assets/countdown-image.jpg";
---

<section
  id="countdown"
  class="h-[calc(100vh-56px)] px-[30px] flex flex-col justify-center relative"
>
  <!-- Background image -->
  <!-- <Image
    src={backgroundImage}
    alt="Background"
    class="absolute inset-0 w-full h-full object-cover"
  /> -->
  <!-- Gradient overlay -->
  <div
    class="absolute inset-0 bg-gradient-to-b from-transparent to-[rgba(191,2,201,0.5)]"
  >
  </div>

  <div class="flex flex-col gap-y-[100px] z-10">
    <h1 class="text-white font-semibold text-[38px] leading-[46px]">
      Veliki Timski Izazov
    </h1>
    <div class="flex flex-col gap-y-[30px]">
      <Countdown />
      <button class="bg-white rounded-[20px] w-full py-5">
        <span class="text-[#2B2B2B] font-semibold">Prijavi ekipu</span>
      </button>
    </div>
  </div>
</section>
