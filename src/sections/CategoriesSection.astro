---
import CategoryCard from "../components/CategoryCard.astro";
import { getCollection } from "astro:content";

const categories = await getCollection("categories");
---

<section
  id="categories"
  class="w-full min-h-[calc(100vh-56px)] px-[30px] md:px-0 flex flex-col justify-center relative overflow-hidden"
>
  <div
    class="absolute inset-0 bg-gradient-to-b from-[#2a2a2a] to-[#1e1e1e] opacity-20 z-0"
  >
  </div>
  <div class="absolute inset-0 bg-[#212121] opacity-50 z-0"></div>
  <div
    class="max-w-screen-lg mx-auto py-8 flex flex-col gap-y-[30px] md:gap-y-[50px] relative z-10"
  >
    <div
      class="flex flex-col gap-y-6 items-start sm:flex-row justify-between sm:items-center sm:gap-y-2"
    >
      <h1
        class="text-white font-semibold text-[28px] md:text-[36px] lg:text-[48px] leading-[1.4]"
      >
        Kategorije Aktivnosti
      </h1>
      <a
        href="/categories"
        class="text-white bg-[#BF02C9] hover:bg-[#a902b0] px-4 py-2 rounded-full font-medium transition-colors"
      >
        Pogledaj sve
      </a>
    </div>
    <div class="grid grid-cols-2 md:hidden gap-5">
      {categories.map((item) => <CategoryCard category={item.data} />)}
    </div>
    <div class="hidden md:flex flex-wrap justify-center gap-5">
      {
        categories.map((item) => (
          <div class="w-[calc(25%-16px)]">
            <CategoryCard category={item.data} />
          </div>
        ))
      }
    </div>
  </div>
</section>
