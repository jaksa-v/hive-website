---
import Carousel from "../components/Carousel";

import { items } from "../data/programsData";
---

<section
  id="programs"
  class="h-[calc(100vh-56px)] px-[30px] flex flex-col justify-center"
>
  <div class="flex flex-col gap-y-[30px]">
    <div>
      <h1 class="text-white font-semibold text-[28px] leading-[39px]">
        Najpopularniji Programi
      </h1>
      <p class="text-white mt-[10px]">
        Pogledajte naše najtraženije tim bilding aktivnosti.
      </p>
    </div>
    <div id="carousel-wrapper">
      <Carousel
        client:load
        slides={items.map((item) => ({ type: "program", data: item }))}
      />
    </div>
  </div>
</section>
