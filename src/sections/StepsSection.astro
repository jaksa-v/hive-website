---
import { Image } from "astro:assets";
import image1 from "../assets/1.png";
import image2 from "../assets/2.png";
import image3 from "../assets/3.png";

const items = [
  {
    title: "Izaberite program",
    description:
      "Pregledajte našu ponudu i izaberite aktivnosti koje najbolje odgovaraju vašem timu.",
  },
  {
    title: "Rezervišite termin",
    description:
      "Kontaktirajte nas i prilagodite događaj prema vašim potrebama.",
  },
  {
    title: "Uživajte u iskustvu",
    description: "Opustite se i prepustite organizaciju našem stručnom timu.",
  },
];
---

<section
  id="steps"
  class="min-h-[calc(100vh-56px)] w-full relative px-[30px] md:px-0 flex flex-col justify-center overflow-hidden"
>
  <div
    class="absolute inset-0 bg-gradient-to-b from-[#2f2f2f] to-[#232323] opacity-20 z-0"
  >
  </div>
  <div class="max-w-screen-lg mx-auto relative z-10 w-full">
    <div class="flex flex-col gap-y-[40px]">
      <div>
        <h2
          class="text-white font-semibold text-[28px] md:text-[36px] lg:text-[48px] leading-[1.4]"
        >
          Kako se prijaviti?
        </h2>
        <p class="text-white mt-[10px]">
          Sve što vam treba za savršen tim bilding!
        </p>
      </div>
      <div class="flex flex-col md:flex-row gap-5 md:gap-8">
        {
          items.map((item, index) => (
            <div class="flex md:flex-col gap-5 items-center p-5 md:p-8 rounded-[20px] bg-[#3B3B3B] md:flex-1 md:text-center group hover:bg-[#444444] hover:scale-[1.02] hover:shadow-2xl hover:shadow-purple-500/20 transition-all duration-500 ease-out cursor-pointer relative overflow-hidden">
              <div class="relative shrink-0">
                <div class="absolute -top-3 -left-3 w-8 h-8 rounded-full bg-[#BF02C9] text-white font-bold flex items-center justify-center transform group-hover:scale-110 group-hover:rotate-12 transition-transform duration-500 shadow-lg">
                  {index + 1}
                </div>
                <div class="w-[100px] h-[100px] md:w-[120px] md:h-[120px] transform group-hover:scale-105 transition-transform duration-500 rounded-full shadow-xl overflow-hidden ring-4 ring-purple-500/20 group-hover:ring-purple-500/40">
                  <Image
                    class="w-full h-full rounded-full object-cover"
                    src={index === 0 ? image1 : index === 1 ? image2 : image3}
                    alt={item.title}
                  />
                </div>
              </div>
              <div class="text-white md:mt-4">
                <p class="font-semibold text-lg md:text-xl bg-gradient-to-r from-white to-white group-hover:from-purple-200 group-hover:to-white bg-clip-text transition-all duration-500">
                  {item.title}
                </p>
                <p class="mt-2 text-xs md:text-sm md:mt-3 text-[#d3d3d3] group-hover:text-white transition-colors duration-500">
                  {item.description}
                </p>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
