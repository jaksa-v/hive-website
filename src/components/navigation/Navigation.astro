---
const navigationItems = [
  // { label: "Home", url: '/' },
  { label: "Services", url: "/" },
  { label: "Projects", url: "/projects" },
  { label: "About", url: "/about" },
  { label: "Contact Us", url: "/contact" },
];

const currentPath = Astro.url.pathname;
console.log(currentPath);
---

<nav
  class="bg-[#1A1A1A] w-full flex justify-between items-center rounded-2xl p-6"
>
  <span class="text-[#F3DFD8] font-bold text-2xl">HIVE</span>
  <ul class="flex gap-x-4">
    {
      navigationItems.map((item) => (
        <li
          class:list={[
            "rounded-xl px-6 py-[18px] cursor-pointer group transition-transform duration-200 hover:scale-105",
            { "bg-[#0F0F0F]": item.label !== "Contact Us" },
            { "bg-[#04C8BE]": item.label === "Contact Us" },
          ]}
        >
          <a
            href={item.url}
            class:list={[
              "font-medium text-lg",
              {
                "text-[#81807E] group-hover:text-[#F3DFD8]":
                  currentPath !== item.url && item.label !== "Contact Us",
              },
              { "text-[#F3DFD8]": currentPath === item.url },
              {
                "text-[#0F0F0F] group-hover:text-[#F3DFD8]":
                  item.label === "Contact Us",
              },
            ]}
          >
            {item.label}
          </a>
        </li>
      ))
    }
  </ul>
</nav>
